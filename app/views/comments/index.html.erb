<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table">
            <h2>All Comments</h2>
            <thead>
                <tr>
                <th>Comments</th>
                <th>Products</th>
                </tr>
            </thead>
            <tbody>
                <% @comments.each do |comment| %>
                <tr>
                <td><%= comment.comment =%></td>
                <td><%= comment.product.name =%></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <hr>
        <button class="btn btn-default"><a href="/">Back to Home</a></button>
    </div>
    <div class="col-md-2"></div>
</div>
