<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table">
            <h2>Product</h2>
            <thead>
                <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <td><%= @product.name =%></td>
                <td><%= @product.description =%></td>
                <td>$<%= @product.pricing =%></td>
                <td>
                    <% if product.category %>
                        <%= @product.category.name %>
                    <% end %>
                </td>
                </tr>
            </tbody>
        </table>

        <button class="btn btn-default"><a href="/products/<%= @product.id %>/edit">Edit</a></button>
        <% if @flash_messages %>
            <hr>
            <div class="alert alert-success" role="alert"> <%= @flash_messages %></div>
        <% end %>
    </div>
    <div class="col-md-2"></div>
</div>
<hr>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <form action="/comments" method="post" class="form-horizontal">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="hidden" name="product_id" value="<%= @product.id =%>">
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" rows="5" name="comment" id="comment"></textarea>
            </div>
            <input type="submit" class="btn btn-default" value="Submit">
        </form>
        <hr>

        <h4>Comments</h4>
        <ul>
        <% if @product.comments %>
            <% @product.comments.each do |comment| %>
                <li><%= comment.comment %> - <%= comment.created_at.strftime('%m/%d/%y') %></li>
            <% end %>
        <% end %>
        </ul>
        <hr>
        <button class="btn btn-default"><a href="/">Back to Home</a></button>
    </div>
    <div class="col-md-2"></div>
</div>
