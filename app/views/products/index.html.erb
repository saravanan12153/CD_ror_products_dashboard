
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <h1>Products</h1>
    <% if @products %>
    <table class="table">
        <thead>
            <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions </th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
            <tr>
            <td><%= product.name =%></td>
            <td><%= product.description =%></td>
            <td>$<%= product.pricing =%></td>
            <td><%= product.category.name =%></td>
            <td><a href="/products/<%= product.id %>">Show</a> | <a href="/products/<%= product.id %>/edit">Edit</a> | <a href= "products/<%= product.id %>" data-method='delete'>Delete</a> </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <% end %>
    <button class="btn btn-default"><a href="/products/new">New Product</a></button>
    </div>
    <div class="col-md-2"></div>
</div>
